{
  "name": "@helperai/react",
  "version": "0.5.1",
  "description": "React/Next.js integration for Helper chat widget",
  "sideEffects": false,
  "files": [
    "dist",
    "README.md"
  ],
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/cjs/index.d.ts",
  "scripts": {
    "build": "tsup --onSuccess \"node postbuild.js\"",
    "build:declarations": "tsc --emitDeclarationOnly --declaration --declarationDir dist/types",
    "dev": "pnpm build --watch",
    "dev:types": "tsc --watch --preserveWatchOutput --emitDeclarationOnly --declaration --declarationDir dist/types",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^22.15.3",
    "@types/react": "^19.0.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.0.4",
    "jsdom": "^23.2.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tsup": "^8.3.6",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4",
    "glob-promise": "^6.0.0"
  },
  "keywords": [
    "helper",
    "chat",
    "ai",
    "widget",
    "sdk",
    "react",
    "nextjs",
    "customer-service"
  ],
  "author": "Helper (https://helper.ai)",
  "license": "MIT",
  "dependencies": {
    "crypto-js": "^4.2.0"
  },
  "homepage": "https://helper.ai",
  "publishConfig": {
    "access": "public"
  }
}
