{
  "name": "@helperai/sdk",
  "version": "0.1.1",
  "description": "Helper SDK for creating customer support widgets on your website",
  "author": "Helper (https://helper.ai)",
  "license": "MIT",
  "homepage": "https://helper.ai",
  "repository": {
    "type": "git",
    "url": "https://github.com/antiwork/helper.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "main": "dist/umd/module.js",
  "module": "dist/esm/module.js",
  "types": "dist/types/module.d.ts",
  "scripts": {
    "build": "pnpm build:types && webpack --config webpack.sdk.cjs --env production",
    "build:types": "tsc --emitDeclarationOnly --declaration --declarationDir dist/types",
    "dev": "webpack --config webpack.sdk.cjs --watch",
    "dev:types": "pnpm build:types --watch --preserveWatchOutput"
  },
  "dependencies": {
    "modern-screenshot": "^4.5.5",
    "@rrweb/record": "^2.0.0-alpha.18",
    "@rrweb/types": "2.0.0-alpha.18",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "scroll-into-view-if-needed": "^3.1.0",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4",
    "babel-loader": "^9.1.3",
    "@babel/preset-env": "^7.25.4",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.24.7",
    "typescript": "^5.5.4",
    "raw-loader": "^4.0.2"
  }
}
